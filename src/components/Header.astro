<header x-data="{ scrolled: false, showmenu: false }" x-init="window.addEventListener('scroll', () => scrolled = window.scrollY > 50)" :class="scrolled ? 'fixed bg-secondary-400 shadow-lg' : 'absolute bg-transparent'" class="top-0 left-0 w-full z-50 transition-all duration-300 text-white">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img src="/logo.svg" alt="Logo" class="h-8 md:h-10 w-auto" />
    </a>

    <!-- Desktop menu -->
    <nav class="hidden lg:block">
      <ul class="flex gap-8 text-white font-medium">
        <li>
          <a href="#" class="flex items-center gap-1 hover:text-orange-400 transition">
            Højskoleophold
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m6 9 6 6 6-6"></path>
            </svg>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center gap-1 hover:text-orange-400 transition">
            Sommerhøjskole
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m6 9 6 6 6-6"></path>
            </svg>
          </a>
        </li>
        <li><a href="#" class="hover:text-orange-400 transition">Priser</a></li>
        <li>
          <a href="#" class="flex items-center gap-1 hover:text-orange-400 transition">
            Om os
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m6 9 6 6 6-6"></path>
            </svg>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Burger menu -->
    <button class="lg:hidden focus:outline-none" x-on:click="showmenu = ! showmenu">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <nav class="lg:hidden bg-secondary-400/90 text-white text-center space-y-2 py-4 transition-all duration-300" x-show="showmenu" x-transition x-on:click.outside="showmenu = false">
    <a href="#" class="block py-2 hover:text-orange-400">Højskoleophold</a>
    <a href="#" class="block py-2 hover:text-orange-400">Sommerhøjskole</a>
    <a href="#" class="block py-2 hover:text-orange-400">Priser</a>
    <a href="#" class="block py-2 hover:text-orange-400">Om os</a>
  </nav>
</header>
